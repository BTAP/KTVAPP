<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cyberdev.datagathering"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="control.GlobalAccess"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cyberdev.datagathering.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cyberdev.datagathering.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.Register"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.Slector"
            android:label="@string/title_activity_slector"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.Attachment"
            android:label="@string/title_activity_attachment" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.Other"
            android:label="@string/title_activity_other" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.TypeSelector"
            android:label="@string/title_activity_type_selector" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.Setting"
            android:label="@string/title_activity_setting" >
        </activity>
        <activity
            android:name="cyberdev.datagathering.Description"
            android:label="@string/title_activity_description" >
        </activity>
    </application>

</manifest>
